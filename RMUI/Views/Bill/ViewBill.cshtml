@model RMUI.Models.BillDisplayModel

@{
    ViewData["Title"] = "ViewBill";
}

<h1>Bill Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillPaid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillPaid)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Food Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
            </tr>
        }
    </tbody>
</table>


<button class="btn btn-warning">
    @Html.ActionLink("Pay Bill", "PayBill", Model)
</button>

<div class="mt-lg-5">
    <a asp-action="ViewOrders" asp-controller="Order">Back to Order List</a>
</div>