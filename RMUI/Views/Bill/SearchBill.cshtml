
@{
    ViewData["Title"] = "SearchBill";
}

<h1 class="text-center">Search Bill</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="row mt-lg-5"></div>
            <div class="row mt-lg-5"></div>
            <form asp-action="ViewBill">
                <div class="form-group">
                    <label for="tNumber" class="h5">Table number: </label>
                    <input id="tNumber" name="tableNumber" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Search Bill" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>



