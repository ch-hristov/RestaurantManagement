@using Microsoft.AspNetCore.Identity
@model PersonDisplayModel

@{
    ViewData["Title"] = "Edit Employee";
}

<h1 class="text-center">Edit Employee</h1>

<hr />
<form asp-action="EditPerson">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="text-center" style="display:flex; flex-direction:column">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IsAdmin" class="control-label"></label>
            <input asp-for="IsAdmin" class="form-control" />
            <span asp-validation-for="IsAdmin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsManager" class="control-label"></label>
            <input asp-for="IsManager" class="form-control" />
            <span asp-validation-for="IsManager" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsWaiter" class="control-label"></label>
            <input asp-for="IsWaiter" class="form-control" />
            <span asp-validation-for="IsWaiter" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DoNotAllowToBecomeAdmin" class="control-label"></label>
            <input asp-for="DoNotAllowToBecomeAdmin" class="form-control" />
            <span asp-validation-for="DoNotAllowToBecomeAdmin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DoNotAllowToBecomeManager" class="control-label"></label>
            <input asp-for="DoNotAllowToBecomeManager" class="form-control" />
            <span asp-validation-for="DoNotAllowToBecomeManager" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DoNotAllowToBecomeServer" class="control-label"></label>
            <input asp-for="DoNotAllowToBecomeServer" class="form-control" />
            <span asp-validation-for="DoNotAllowToBecomeServer" class="text-danger"></span>
        </div>
        <button type="submit">Send</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}